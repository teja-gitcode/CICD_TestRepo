# Jetson CV Pipeline - Environment Variables
# Copy this file to .env and update values as needed

# Timezone
TZ=America/New_York

# Network
NETWORK_NAME=cartloading-network

# MediaMTX Configuration
MEDIAMTX_RTSP_PORT=8554
MEDIAMTX_RTMP_PORT=1935
MEDIAMTX_HLS_PORT=8888
MEDIAMTX_WEBRTC_PORT=8889
MEDIAMTX_WEBRTC_ICE_PORT=8189
MEDIAMTX_API_PORT=9997
MEDIAMTX_MEMORY_LIMIT=2G
MEDIAMTX_CPU_LIMIT=2

# Camera RTSP URLs (via MediaMTX)
# Use these URLs from inside Docker containers
CAMERA1_RTSP_URL=rtsp://mediamtx:8554/camera1
CAMERA2_RTSP_URL=rtsp://mediamtx:8554/camera2
CAMERA3_RTSP_URL=rtsp://mediamtx:8554/camera3
MEDIAMTX_MEMORY_RESERVATION=1G
MEDIAMTX_CPU_RESERVATION=1

# Node-RED Configuration
NODERED_PORT=1881
NODERED_MEMORY_LIMIT=512M
NODERED_MEMORY_RESERVATION=256M
NODERED_DATA_PATH=/opt/cartloading/nodered/data

# OpenCV GPU Container Configuration
API_PORT=5001
STREAM_PORT=5002
OPENCV_MEMORY_LIMIT=24G
OPENCV_CPU_LIMIT=6
OPENCV_MEMORY_RESERVATION=8G
OPENCV_CPU_RESERVATION=4

# MQTT Configuration (if needed)
MQTT_BROKER=localhost
MQTT_PORT=1883

# Portainer Configuration
PORTAINER_PORT=9001

